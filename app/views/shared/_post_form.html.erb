<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
  	<% option = rand(1..5) %>
  	<% if option == 1 %>

  		<% @message = "What are you thinking "  + current_user.name + "?" %>

	  	<% elsif option == 2 %>

	  		<% @message = "Welcome to RailsNetwork "  + current_user.name %>

	  	<% elsif option == 3 %>

	  		<% @message = "How are you "  + current_user.name + "?" %>

	  	<% elsif option == 4 %>

	  		<% @message = "What are you doing "  + current_user.name + "?" %>

	  	<% elsif option == 5 %>

	  		<% @message = "Say something "  + current_user.name %>

  	<% end -%>
  		
    <%= f.text_area :content, placeholder: @message %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>