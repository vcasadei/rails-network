<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span20 offset4">
  
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :cpf %>
      <%= f.text_field :cpf %>

      <%= f.label :gender %>
      <%= f.text_field :gender %>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.label :state %>
      <%= f.text_field :state %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
    </br>
      <div align = "right">
        <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>

  </div>
</div>